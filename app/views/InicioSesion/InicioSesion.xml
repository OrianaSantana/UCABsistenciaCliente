<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
   <Page.actionBar>
    <ActionBar text="UCABsistencia" android.icon="res://colmena_ucab2" android.iconVisibility="always"></ActionBar>
   </Page.actionBar> 
    <StackLayout orientation="vertical">
        <Image src="res://logo_ucab" stretch="none" horizontalAlignment="center" />
        <TextField text= "{{usuario}}" hint="usuario@ucab.edu.ve" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <TextField text= "{{Contraseña}}" hint="Contraseña" secure="true" />
        <Button text="Iniciar Sesión" tap="IniciarSesion" />
         <ActivityIndicator busy="{{ isLoading }}"/>
    </StackLayout>
</Page>