<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  loaded="pageLoaded">
  <page.actionBar>
    <action-bar title="UCABsistencia">
      <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
      <action-bar.actionItems>
        <ios>
          <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
        </ios>
      </action-bar.actionItems>
    </action-bar>
  </page.actionBar>
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>
      <!-- Preference page contents -->
	    <GridLayout rows="auto, *" columns="*" loaded="contentLoaded" cssClass="main-content" id="main-content">
       <!-- Segmented Bar -->
        <SegmentedBar row="0"
                ios:selectedBackgroundColor="white"
                android:selectedBackgroundColor="#053140"
                cssClass="conf-segmented-bar">
            <SegmentedBar.items>
                <SegmentedBarItem title="Ubicacion"/>
            </SegmentedBar.items>
        </SegmentedBar>
        <!--<GridLayout row="1" rows="auto,auto, *" loaded="pruebaPreferencias">			-->        
        <GridLayout row="1" rows="auto,auto, *" loaded="onBackgroundLoaded">
<ScrollView>
    <StackLayout>
        <Label text="UCABsistencia" class="tittle"/>       
        <Label text="Valores Campo MagnÃ©tico" class="Label"/>       
        <TextView id="textview" text="{{ messageview }}" editable="false" class="textarea" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"/>    
        <StackLayout orientation="horizontal">
            <Button text="Iniciar" tap="{{ insert }}" />
            <Button text="Limpiar" tap= "{{ limpiar }}"/>        
        </StackLayout>
        <Label text="Tiempo de muestreo" class="Label botones"/>
        <Button text="10x1sec" id="Boton8Sec" tap="{{ onTap3 }}" class="buttonClass green radius" />
    </StackLayout>
    </ScrollView>
     </GridLayout>
       
    </GridLayout>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>


